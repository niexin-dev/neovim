BasedOnStyle: LLVM  # 以 LLVM 风格为基础，再覆盖下面的参数，避免从零配置

IndentWidth: 4      # 每一层缩进使用 4 个空格（不使用 2/8）

UseTab: Never       # 禁止使用 Tab，所有缩进统一使用空格格式化

BreakBeforeBraces: Linux   # Linux 风格大括号规则：
                           # - 函数 { 换行
                           # - if/else/for/while/switch 的 { 与语句同行

IndentCaseLabels: false    # case 不额外缩进，保持与 switch 对齐（Linux/嵌入式推荐）

ColumnLimit: 120           # 单行字符限制为 120，不强制换行（更适合现代宽屏和中文注释）

AllowShortIfStatementsOnASingleLine: false  
                           # 不允许单行 if，例如禁止格式： if (x) return 1;
                           # 格式化后强制采用块结构：
                           # if (x) {
                           #     return 1;
                           # }

SpaceAfterControlStatementKeyword: true     
                           # 控制语句关键字后加空格，例如： if (x) 而不是 if(x)

